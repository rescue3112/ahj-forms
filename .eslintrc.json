{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
        ],
        "no-undef": [
            "off"
        ],
        "class-methods-use-this": [
            "off"
        ],
        "no-unused-expressions": [
            "off"
        ],
        "no-unused-vars": [
            "off"
        ],
        "import/no-extraneous-dependencies": [
            "warn"
        ],
        "no-new": [
            "warn"
        ]
    }
}
